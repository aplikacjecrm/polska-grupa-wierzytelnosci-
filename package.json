{
  "name": "promeritum-komunikator",
  "version": "1.0.0",
  "description": "Aplikacja komunikacyjna Pro Meritum - Poczta i Czat",
  "main": "main.js",
  "scripts": {
    "start": "node backend/server.js",
    "electron-start": "electron .",
    "dev": "nodemon --exec electron .",
    "build": "echo 'No build step for backend'",
    "build:electron": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "backup": "node create-backup.js",
    "restore": "node restore-backup.js",
    "list-backups": "node restore-backup.js"
  },
  "keywords": [
    "email",
    "chat",
    "komunikator",
    "electron"
  ],
  "author": "Pro Meritum",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@google-cloud/vision": "^5.3.4",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.1.2",
    "cloudinary": "^1.41.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "imap": "^0.8.19",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.6.5",
    "mammoth": "^1.11.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.3",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "sqlite3": "^5.1.6",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.promeritum.komunikator",
    "productName": "Pro Meritum Komunikator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!dist",
      "!node_modules"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    }
  }
}
